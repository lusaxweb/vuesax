
.placeholderx-enter, .placeholderx-leave-to {
  opacity: 0;
  transform: translate(15px) !important
}
.icon-validate-enter, .icon-validate-leave-to {
  opacity: 0;
  transform: scale(.5) !important
}

.vs-con-input-label
  position relative
  transition: all .3s ease
  width: 200px
  .vs-con-input
    display flex
    align-items flex-start
    flex-direction column
    position relative
    justify-content: center
    .vs-inputx
      color: inherit
      position relative
      padding: 0.4 rem
      border-radius 5px
      border 1px solid rgba(0, 0, 0,.2)
      box-sizing: border-box
      box-shadow: 0px 0px 0px 0px rgba(0, 0, 0, 0.150);
      transition: all .3s ease
      width: 100%
      &:focus
        box-shadow: 0px 3px 10px 0px rgba(0, 0, 0, 0.150);
      &:focus,&.hasValue
        + .vs-placeholder-label
          transform: translate(-5px,-95%) !important
          font-size: .7rem
          padding-left: .5rem !important
      &:focus
        + .input-span-placeholder
          transform: translate(5px)  
      &.hasIcon
        padding-left: 32px;   
        + .input-span-placeholder
          padding-left: 32px;
      &.icon-after-input
        padding-left: .4rem !important
        padding-right: 28px
        + .input-span-placeholder
          padding-left: .4rem;
          padding-right: 28px
    .input-span-placeholder
      transition: all .2s ease
      position: absolute
      border-radius 5px
      left 0px
      padding: .4 rem
      padding-left: .55 rem
      width: 100%
      box-sizing: border-box
      overflow: hidden
      font-size: .85rem
      color: rgba(0,0,0,.4)
      white-space: nowrap
      cursor text
      user-select none
    .icon-inputx
      position absolute
      left 5px;
      z-index 100
      font-size: 1.1rem
      border-right: 1px solid rgba(0,0,0,.1)
      padding-right: 3px;
      color rgba(0,0,0,.4)
      cursor default
      user-select none
      
      &.icon-after
        left auto
        right 5px;
        border-left: 1px solid rgba(0,0,0,.1)
        border-right: 0px
        padding-left: 3px;
        padding-right: 0px;
  .vs-input-label
    padding-left 5px; 
    font-size: .85rem
    color rgba(0,0,0,.7)

  .con-text-validation
    position: relative
    font-size: .65rem
    overflow: hidden
    transition: all .2s ease;
    .span-text-validation
      padding: 2px 4px;
      padding-bottom: 4px
      display: block
  .input-icon-validate
    position: absolute
    top: 0px
    right: 0px
    font-size: 1.1rem
    height: 100%;
    display: flex
    align-items: center
    padding: 0px 4px
    border-radius 0px 5px 5px 0px
    transition: all .2s ease

for colorx, i in $vs-colors
  .vs-input-{colorx}
    
    .vs-inputx
      &:focus
        border: 1px solid $vs-colors[colorx]
        ~ .vs-placeholder-label, ~ .icon-inputx
          color $vs-colors[colorx]
    &.isFocus
      .vs-input-label
        color: $vs-colors[colorx]
  .span-text-validation-{colorx}
    color: $vs-colors[colorx] !important
  &.input-icon-validate-{colorx}
    .vs-inputx
      border: 1px solid $vs-colors[colorx] !important
    .input-icon-validate
      background: alpha($vs-colors[colorx],.2)
      color $vs-colors[colorx]