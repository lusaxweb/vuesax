.con-vs-pagination
  --color-pagination: rgb(240,240,240)
  --color-pagination-alpha: rgb(240,240,240, .5)
  .input-goto
    padding: 8px
    border-radius: 5px
    border: 0px solid rgba(0,0,0,.2)
    background: rgb(240,240,240)
    margin-left: 5px
  .nav-pagination
    display: flex
    align-items: center
    justify-content: center
    >ul
      display: flex
      align-items: center
      justify-content: center
      padding: 0px
      background: rgb(240,240,240)
      border-radius: 20px
      padding-left: 5px
      padding-right: 5px

      >li
        cursor pointer
        width: 35px
        height 35px
        display: flex
        align-items: center
        justify-content: center
        border-radius: 8px
        transition: all .25s ease
        position relative
        backface-visibility: visible
        margin: 0px 2px
        font-weight: bold
        color: rgba(0,0,0,.5)
        span
          z-index 100
        .effect
          z-index 50
          content: ''
          position absolute
          width: 100%
          height 100%
          background: var(--color-pagination)
          left 0px
          top: 0px
          display: block
          border-radius: 8px
          transform: scale(.5)
          opacity 0
          transition: all .2s ease
          box-shadow: 0px 0px 20px 0px rgba(0,0,0,0)
        &.is-current
          transform: scale(1.05)
          color: rgb(255,255,255)
          font-weight: bold
          cursor: default

          .effect
            opacity 1
            transform: scale(1) !important
            box-shadow: 0px 0px 20px 0px var(--color-pagination-alpha)
        &:hover:not(.is-current)
          color var(--color-pagination)


  .btn-pagination
    width: 35px
    height 35px
    border-radius: 50%
    border: 0px
    cursor pointer
    display: flex
    align-items: center
    justify-content: center
    color: rgba(0,0,0,.6)
    transition: all .2s ease
    background: rgb(240,240,240)
    margin: 0px
    z-index 200
    &.btn-prev-pagination
      margin-right: 5px
    &.btn-next-pagination
      margin-left: 5px
    &.btn-pagination.disabled
      color: rgba(0,0,0,$vs-disabled-opacity)
      cursor: default
      pointer-events: none
    &.btn-pagination.disabled:hover
      background: rgb(240,240,240) !important
    i
      font-size: 1.2rem
    &:hover
      background: var(--color-pagination)
      color: rgb(255,255,255)


for colorx, i in $vs-colors
  .vs-pagination-{colorx}
    li
      &:hover:not(.is-current)
        color: var(colorx, 1) !important
    .effect
      background: var(colorx, 1) !important
      box-shadow: 0px 0px 20px 0px var(colorx, .5) !important
    .btn-pagination
      &:hover
        background: var(colorx, 1) !important
